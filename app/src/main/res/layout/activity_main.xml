<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:background="#121212"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- Titolo principale -->
    <TextView
        android:id="@+id/txtTitle"
        android:text="VLC Remote"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Titolo del video corrente -->
    <TextView
        android:id="@+id/txtNowPlaying"
        android:text="Nessun video in riproduzione"
        android:textColor="#AAAAAA"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"/>

    <!-- Controlli principali -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnPlay"
            android:text="▶"
            android:textSize="22sp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btnPause"
            android:text="⏸"
            android:textSize="22sp"
            android:backgroundTint="#FFC107"
            android:textColor="#000000"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btnStop"
            android:text="⏹"
            android:textSize="22sp"
            android:backgroundTint="#F44336"
            android:textColor="#FFFFFF"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"/>
    </LinearLayout>

    <!-- Controlli secondari -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnPrev"
            android:text="⏮"
            android:textSize="18sp"
            android:backgroundTint="#333333"
            android:textColor="#FFFFFF"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="6dp"/>

        <Button
            android:id="@+id/btnNext"
            android:text="⏭"
            android:textSize="18sp"
            android:backgroundTint="#333333"
            android:textColor="#FFFFFF"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="6dp"/>

        <Button
            android:id="@+id/btnVolUp"
            android:text="🔊+"
            android:textSize="16sp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_margin="6dp"/>

        <Button
            android:id="@+id/btnVolDown"
            android:text="🔉-"
            android:textSize="16sp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_margin="6dp"/>
    </LinearLayout>

    <!-- Bottone fullscreen -->
    <Button
        android:id="@+id/btnFullscreen"
        android:text="⛶ Fullscreen"
        android:textSize="16sp"
        android:backgroundTint="#9C27B0"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="12dp"/>

    <!-- Barra avanzamento -->
    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:progressTint="#4CAF50"
        android:thumbTint="#4CAF50"/>

    <!-- Testo tempo corrente / totale -->
    <TextView
        android:id="@+id/txtTime"
        android:text="00:00 / 00:00"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>

    <!-- Bottone Aggiorna Playlist -->
    <Button
        android:id="@+id/btnRefreshPlaylist"
        android:text="🔄 Aggiorna Playlist"
        android:textSize="16sp"
        android:backgroundTint="#607D8B"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="12dp"/>

    <!-- Intestazione Playlist -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#2D2D2D"
        android:padding="8dp"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Playlist"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtPlaylistCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 elementi"
            android:textColor="#AAAAAA"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- Playlist con sfondo chiaro e testo scuro -->
    <ListView
        android:id="@+id/playlistView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#E0E0E0"
        android:dividerHeight="1dp"
        android:layout_marginTop="4dp"
        android:scrollbars="vertical"
        android:fastScrollEnabled="true"
        android:background="#FFFFFF"
        android:padding="4dp"/>
</LinearLayout>